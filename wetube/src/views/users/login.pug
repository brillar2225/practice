extends ../layout

block content 
  if errorMessage 
    span=errorMessage
  form(method="POST")  
    input(name='username', type='text', placeholder='Enter a username', required)
    input(name='password', type='password', placeholder='Enter a password', required)
    input(type='submit', value='Log in')
    br
    a(href="/users/github/start") Continue with Github
    a(href="/users/kakao/start") Continue with KaKao Talk
    hr
    div 
      span Don't have an account? 
      a(href='/join') Create one now
