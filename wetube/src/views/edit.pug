extends layout

block content 
  h4 Change Title of video
  form(method='POST')
    input(name='title', type='text', placeholder='Video Title', value=video.title, required)
    input(name='description', type='text', placeholder='Description', value=video.description, minlenth='20', required)
    input(name='hashtags', placeholder='Hashtags, separated by comma',value=video.hashtags.join(), required)
    input(value='Save', type='submit')